<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <!-- ConstraintLayout for top buttons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/main_menu_music_player_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/music_player"
            android:scaleType="fitCenter"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_menu_video_player_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/main_menu_video_player_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/video_player"
            android:scaleType="fitCenter"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_menu_flight_info_btn"
            app:layout_constraintStart_toEndOf="@id/main_menu_music_player_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/main_menu_flight_info_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/flight_info"
            android:scaleType="fitCenter"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_menu_safe_guide_btn"
            app:layout_constraintStart_toEndOf="@id/main_menu_video_player_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/main_menu_safe_guide_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/safe_guide"
            android:scaleType="fitCenter"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/main_menu_flight_info_btn"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- LinearLayout for bottom buttons -->
    <LinearLayout
        android:id="@+id/bottom_button_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/main_menu_light_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="10dp"
            android:background="@drawable/light_off" />

        <ImageButton
            android:id="@+id/main_menu_service_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="10dp"
            android:background="@drawable/not_in_service"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
